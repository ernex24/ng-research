/* ==========================================================================
    carrusel Log in
   ========================================================================== */

.carrusel {
  display: block;
  float: left;
  width: 319px;
  height: 100%;
  padding: 0;
  border: 0;
  border-radius: 0 0.625em 0.625em 0;
  box-shadow: 0 19px 38px rgba(0, 0, 0, 0.1),
  0 15px 12px rgba(0, 0, 0, 0.1);
}

.carousel-control-next,
.carousel-control-prev {
  display: none;
}

.carousel-indicators {
  display: none;
}

.carrusel .img-fluid {
  max-width: none;
  display: block;
  border-radius: 0.625em 0 0 0.625em;
}

.gvc-carrusel-caption {
  position: absolute;
  z-index: 10;
  right: 0;
  top: 0;
  left: 0;
  padding: 1.875em 1.875em;
  color: #FFFFFF;
  text-align: left;
  font-weight: 400;
}

.copyCarrousel {
  margin: 250px 0 5px 0;
}

.logoEsnCarrousel {
  margin: 0 0 0 -30px;
}

.colorBGCarrousel {
  width: 100%;
  height: 100%;
  background-color: red;
}

.colorBGCarrousel {
  top: 0;
  display: block;
  width: 325px;
  height: 436px;
  background: -webkit-gradient( linear, left bottom, left top, from(rgba(163, 239, 229, 0.8)),
  to(rgba(6, 117, 150, 0.9)));
  background: linear-gradient( to top, rgba(163, 239, 229, 0.8), rgba(6, 117, 150, 0.9));
  margin: -437px 0 0 -30px;
  border-radius: 10px 0 0 10px;
}

@media only screen and (max-device-width: 767px) {

  .carrusel {
    margin-bottom: 240px;
    margin-top: 450px;
    display: none;
    position: absolute;
    float: left;
    width: 100%;
    height: 437px;
    padding: 0;
    border: 0;
    border-radius: 10px 10px 10px 10px;
    -webkit-box-shadow: none;
    box-shadow: none;
  }

  .carousel .slide{
    border-radius: 10px 10px 10px 10px;
  }

  .carousel-inner{
    width: 100%;
  }

  .item{
    margin-right: 30px;
    border-radius: 10px 10px 10px 10px;
  }

  .carousel-item{
    border-radius: 10px 10px 10px 10px;
  }

  .copyCarrousel {
    display: none;
  }

  .carousel .img-fluid{
  width: 100%;
    border-radius: 10px 10px 10px 10px;
    -webkit-box-shadow: 0 19px 38px rgba(0, 0, 0, 0.1), 0 15px 12px rgba(0, 0, 0, 0.1);
    box-shadow: 0 19px 38px rgba(0, 0, 0, 0.1), 0 15px 12px rgba(0, 0, 0, 0.1);
  }

  .d-none{
    display: block !important;
  }

  .d-md-block{

  }

}
