}

.star {
  color: #666666;
  visibility:hidden;
  font-size:25px;
  cursor:pointer;
}
.star:before {
  content: "\2605";
  position: absolute;
  visibility:visible;
}
.star:checked:before {
  content: "\2606";
  position: absolute;
}

.icon-lista{
  width: 25px;
  margin-right: 10px;
}

.fechaLista{
  font-size: 11px;
  font-weight: 800;
  text-transform: uppercase;
  color: #999999;
  line-height: 1;
  margin-right: 10px;
}

.titulodeImforme{
  min-width: 150px;
  width: 250px;
  line-height: 1;

}

.round {
  position: relative;
}

.round label {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 50%;
  cursor: pointer;
  left: -10px;
  position: absolute;
  top: 3px;
  width: 17px;
  height: 17px;
}

.round label:after {
  border: 2px solid #fff;
  border-top: none;
  border-right: none;
  content: "";
  height: 6px;
  left: 3px;
  opacity: 0;
  position: absolute;
  top: 2px;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  width: 12px;
}

.round input[type="checkbox"] {
  visibility: hidden;
}

.round input[type="checkbox"]:checked + label {
  background-color: #1AA5AC;
  border-color: #1AA5AC;
}

.round input[type="checkbox"]:checked + label:after {
  opacity: 1;
}

