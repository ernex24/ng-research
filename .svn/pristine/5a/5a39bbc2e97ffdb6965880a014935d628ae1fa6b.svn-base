}

.listaPadre{
  padding: 0 0;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
}

.listaPadre :nth-child(even) ul { background-color: #f5f5f5; }
.listaPadre :nth-child(odd) ul { background-color: #ffffff; }
.listaPadre :first-child ul  { border-radius: 10px 10px 0 0;}
.listaPadre :last-child ul  { border-radius: 0 0 10px 10px;}

.itemLista:hover{
  background-color: #cccccc;
}

.tituloLista{
  height: 40px;
  justify-content: center;
  padding: 0 0;
  line-height: 1;
}

.rowTitulo{
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.itemLista{
  justify-content: center;
  padding: 0 0;

}

.rowItem{
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 10px;
  align-items: center;
}

.estrellainput{
  margin-right: 15px;
  min-width: 10px;
  min-height: 35px;
}

.rowItem p {
  color: #999999;
}

.rowItem p:hover {
