
/* ==========================================================================
    $NAVBAR INFORMES
   ========================================================================== */

.lista{
  margin-top: 15px;
}

.fondoLista{
  text-align: center;
}

.verMasboton{
  line-height: 1;
  width: 70px;
}

.titulopdelalista{
  line-height: 1;
}

.listaPadre{
  padding: 0 0;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  margin-bottom: 0;
}

.listaPadre :nth-child(even) ul { background-color: #f5f5f5; }
.listaPadre :nth-child(odd) ul { background-color: #ffffff; }
.listaPadre :first-child ul  { border-radius: 10px 10px 0 0;}
.listaPadre :last-child ul  { border-radius: 0 0 10px 10px;}

.itemLista:hover{
  background-color: #ccccc;
}

.tituloLista{
  height: 40px;
  justify-content: center;
  padding: 0 0;
  line-height: 1;
}

.rowTitulo{
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.itemLista{
  justify-content: center;
  padding: 0 0;

}

.rowItem{
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 10px;
  align-items: center;
}

.estrellainput{
  margin-right: 15px;
  min-width: 10px;
  min-height: 35px;
}

.rowItem p {
  color: #999999;
}

.rowItem p:hover {
  color: #1AA5AC;
}

.star {
  color: #666666;
  visibility:hidden;
  font-size:25px;
  cursor:pointer;
}
.star:before {
  content: "\2605";
  position: absolute;
  visibility:visible;
}
.star:checked:before {
  content: "\2606";
  position: absolute;
}

.icon-lista{
  width: 25px;
  margin-right: 10px;
}

.fechaLista{
  font-size: 11px;
  font-weight: 800;
  text-transform: uppercase;
  color: #999999;
  line-height: 1;
  margin-right: 10px;
}

.titulodeImforme{
  min-width: 150px;
  width: 250px;
  line-height: 1;

}


.round {
  position: relative;
}

.round label {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 50%;
  cursor: pointer;
  left: -10px;
  position: absolute;
  top: 3px;
  width: 17px;
  height: 17px;
}

.round label:after {
  border: 2px solid #fff;
  border-top: none;
  border-right: none;
  content: "";
  height: 6px;
  left: 3px;
  opacity: 0;
  position: absolute;
  top: 2px;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  width: 12px;
}

.round input[type="checkbox"] {
  visibility: hidden;
}

.round input[type="checkbox"]:checked + label {
  background-color: #1AA5AC;
  border-color: #1AA5AC;
}

.round input[type="checkbox"]:checked + label:after {
  opacity: 1;
}




