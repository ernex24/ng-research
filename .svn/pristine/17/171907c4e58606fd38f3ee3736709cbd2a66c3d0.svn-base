/* Footer del log in */

footer {
  position: absolute;
  bottom: 30px;
  width: 100%;
  color: #fff;
  text-align: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}

footer a {
  cursor: pointer;
}

footer h2 {
  padding: 0 1.875em;
}

.textoFooter {
  width: 40%;
}

.logoFooter {
  display: block;
  padding: 0 0 1.875em 0;
  margin: 0 auto;
  width: 273px;
  height: 91px;
}

@media (min-height: 0) and (max-height: 750px) {

  footer {
    position: inherit;
    margin: 60px auto;
  }
  .textoFooter {
    width: 60%;
  }
}

@media (max-width: 767px) {

 footer {
   display: none;
 }

  .norton {
    display: none;
  }

}

/* ==========================================================================
   Norton
   ========================================================================== */

.norton {
  position: fixed;
  height: 70px;
  width: 150px;
  right: 0;
  bottom: 0;
  padding: 0 13px;
  border-radius: 0.625em 0 0 0;
  background-color: #FFFFFF;
  overflow: hidden;
  -webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
  -ms-box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
}

@media (min-height: 200px) and (max-height: 600px) {

  .norton {
    position: inherit;
    float: right;
  }
}


@media only screen and (max-device-width: 767px) {

 footer{
   display: block;
   margin: 0 0 0 0 !important;
   bottom: 0;
   position: absolute;
   background: rgba(0,0,0,0);
   background: -moz-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(16,48,58,1) 100%);
   background: -webkit-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(16,48,58,1) 100%);
   background: -o-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(16,48,58,1) 100%);
   background: -ms-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(16,48,58,1) 100%);
   background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgb(16,48,58) 100%);
   padding-bottom: 25px;
   padding-top: 50px;
 }

 footer h2 {
   padding: 0 0;
   font-weight: 600;
 }

 .norton{
   display: block;
   height: 35px;
   width: 100px;
 }

 .textoFooter{
   width: 100%;
   margin: 0 10px;
 }




}



